@page
@model Dist2806.Pages.CreateModel
@{
    ViewData["Title"] = "Create Material";
}

<h1>Create New Material</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="Material.Material_Name" class="control-label"></label> 
        <input asp-for="Material.Material_Name" class="form-control" />
        <span asp-validation-for="Material.Material_Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Material.Material_Cost" class="control-label"></label>
        <input asp-for="Material.Material_Cost" class="form-control" />
        <span asp-validation-for="Material.Material_Cost" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>

</form>
